{
  "rewrites": [
    {
      "source": "/wallet-service/:path*",
      "destination": "https://mapi.examtree.ai/wallet-service/:path*"
    },
    {
      "source": "/auth-service/:path*",
      "destination": "https://mapi.examtree.ai/auth-service/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://moonbet-casino.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Origin, Content-Type, Authorization"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}
